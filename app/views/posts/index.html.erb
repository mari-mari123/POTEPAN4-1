<div class="main_container">
  <div class="information">
    <h2>スケジュール一覧</h2>
    <%= render partial: "shared/flash" %>
  </div>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= l post.start_date %></td>
          <td><%= l post.end_date  %></td>
          <td>
            <% if post.whole_day == true then %>
              ○
            <% end %>
          </td>
          <td><%= simple_time(post.updated_at) %></td>
          <td><%= link_to "確認", post %></td>
          <td><%= link_to "編集", [:edit, post] %></td>
          <td><%= link_to "削除", post, method: :delete, data: {confirm: "本当に削除しますか？"}  %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <p>
    <%= link_to "スケジュール新規登録", new_post_path %>
  </p>
</div>






