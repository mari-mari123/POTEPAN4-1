<div class="main_container">
  <div class="information">
    <h2>スケジュール編集</h2>
    <%= render partial: "shared/flash" %>
    <%= render "shared/error", obj: @post %>
  </div>
  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td>
          <%= f.text_field :title %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :title, "開始日" %></th>
        <td>
          <%= f.date_field :start_date %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :title, "終了日" %></th>
        <td>
          <%= f.date_field :end_date %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :title, "終日" %></th>
        <td>
          <%= f.check_box :whole_day %>
          終日の場合はチェックを入れます
        </td>
      </tr>
      <tr>
        <th><%= f.label :title, "スケジュールメモ" %></th>
        <td>
          <%= f.text_area :content, class: "posts-content" %>
        </td>
      </tr>
    </table>
    <ul>
      <li><%= f.submit "スケジュールの編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
    </ul>
  <% end %>
</div>



