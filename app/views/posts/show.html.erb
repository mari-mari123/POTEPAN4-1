<div class="main_container">
    <div class="information">
      <h2>スケジュール詳細</h2>
    </div>
      <table>
        <tr>
          <th>タイトル</th>
          <td>
            <%= @post.title%>
          </td>
          </tr>
          <tr>
            <th>開始日</th>
            <td>
              <%= l @post.start_date%>
            </td>
          </tr>
          <tr>
            <th>投稿日時</th>
            <td>
              <%= date_time(@post.created_at) %>
            </td>
          </tr>
          <tr>
            <th>終日</th>
            <td>
              <% if @post.whole_day == true then %>
                ○
              <% end %>
            </td>
          </tr>
          <tr>
            <th>スケジュールメモ</th>
            <td>
              <%= @post.content %>
            </td>
          </tr>
        </table>
  <div class="post-menus">
    <ul>
      <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
      <li><%= link_to "スケジュールを編集する", edit_post_path %></li>
      <li><%= link_to "スケジュールを削除する", post_path, method: :delete, data: {confirm: "本当に削除しますか？"} %></li>
    </ul>
  </div>
</div>



